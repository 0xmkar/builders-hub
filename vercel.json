{
  "functions": {
    "app/**/*.tsx": {
      "memory": 1024
    }
  },
  "buildCommand": "yarn build",
  "installCommand": "yarn install --frozen-lockfile",
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "NEXT_TELEMETRY_DISABLED": "1",
      "NEXT_SHARP_PATH": "./node_modules/sharp"
    }
  },
  "framework": "nextjs",
  "outputDirectory": ".next"
} 